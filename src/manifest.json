{
  "manifest_version": 3,
  "name": "solved.tags",
  "version": "1.0.0",
  "description": "solved.ac 기여 페이지에서 메타 태그를 표시합니다.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://solved.ac/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://solved.ac/profile/*/votes",
        "https://solved.ac/profile/*/votes?*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}